    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.laboratorio_05.ui.movie.billboard.BillboardFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_billboard" >
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
        <action
            android:id="@+id/action_firstFragment_to_threeFragment"
            app:destination="@id/threeFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.laboratorio_05.ui.movie.newmovie.NewMovieFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_newmovie" />
    <fragment
        android:id="@+id/threeFragment"
